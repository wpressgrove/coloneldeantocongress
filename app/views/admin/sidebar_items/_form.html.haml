= form_for [:admin, @page, @sidebar_item] do |f|
  = render 'shared/form_error_messages', object: @sidebar_item, name: 'Sidebar Item'

  .field
    = render 'shared/field', f: f, field_type: 'text_field', object: @sidebar_item, duplicate: nil, field: 'name'

  .field
    = f.label :body, 'Body'
    = f.text_area :body, {class: 'tinymce'}

  .actions
    = f.submit 'Save', class: 'button tiny'

= link_to 'Back', admin_page_path(@page)
= tinymce_assets
= tinymce
