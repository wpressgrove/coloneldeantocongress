= form_for [:admin, @page] do |f|
  = render 'shared/form_error_messages', object: @page, name: 'Page'

  - if @page.required
    = @page.name
  - else
    = render 'shared/field', f: f, field_type: 'text_field', object: @page, duplicate: nil, field: 'name'

  .field
    = f.check_box :has_header
    = f.label :has_header, 'Show Header'
  .field
    = f.check_box :has_footer
    = f.label :has_footer, 'Show Footer'

  .field
    = f.label :body, 'Body'
    = f.text_area :body, {class: 'tinymce'}

  .actions
    = f.submit 'Save', class: 'button tiny'

= link_to 'Back', admin_pages_path
= tinymce_assets
= tinymce
