= form_for [:admin, @user] do |f|
  = render 'shared/form_error_messages', object: @user, name: 'User'

  = render 'shared/field', f: f, field_type: 'text_field', object: @user, duplicate: nil, field: 'email'
  = render 'shared/field', f: f, field_type: 'password', object: @user, duplicate: nil, field: 'password'
  = render 'shared/field', f: f, field_type: 'password', object: @user, duplicate: nil, field: 'password_confirmation'
  .actions
    = f.submit 'Save', class: 'button tiny'

= link_to 'Back', admin_users_path
